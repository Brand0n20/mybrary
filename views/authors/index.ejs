<h2>Search Authors</h2>
<form action="/authors" method="GET">
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Name</label>
            <input type="text" name="name" class="form-control mb-2" value="<%= searchOptions.name %>">
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<br>
<% authors.forEach(author => { %>
    <div class="authors">
        <div><%= author.name %></div>
        <a href="/authors/<%= author.id %>">View</a>
        <a href="/authors/<%= author.id %>/edit" class="spacing">Edit</a>
        <%- include('../partials/delete.ejs', { url: `/authors/${author.id}`, errorMessage: locals.errorMessage }) %>
    </div>
<% }) %>
